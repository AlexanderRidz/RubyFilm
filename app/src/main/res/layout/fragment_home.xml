<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_home_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/layout_animation_rise_to_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none">

        <HorizontalScrollView
            android:id="@+id/fragment_home_popular_scroll"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/fragment_home_container"
            app:layout_constraintEnd_toEndOf="@id/fragment_home_container"
            app:layout_constraintStart_toStartOf="@id/fragment_home_container">

            <LinearLayout
                android:id="@+id/fragment_home_popular_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">
                <ImageView
                    android:layout_width="376dp"
                    android:layout_height="376dp"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="376dp"
                    android:layout_height="376dp"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="376dp"
                    android:layout_height="376dp"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/fragment_home_new_scroll"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_home_popular_scroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/fragment_home_new_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/fragment_home_genre_scroll"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_home_new_scroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/fragment_home_genre_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/fragment_home_free_film_scroll"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_home_genre_scroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/fragment_home_free_film_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_light_primaryContainer"
                    android:layout_marginEnd="8dp">
                </ImageView>

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>